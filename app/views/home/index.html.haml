
- @branches.each do |branch|
  .branch
    %h3
      = branch.name
    .last_good
      %strong
        Last good revision:
      - last_good = branch.last_good_revision
      - if last_good
        %span.good
          = last_good
      - else
        No good revision found.
    .revisions
      - branch.display_revisions.each do |rev|
        .revision
          %div{:class => %{#{rev.status}}, :'data-target' => "##{rev.id}", :'data-toggle' => 'collapse'}
            = rev.sha
          %div{:class => %w{build_results collapse}, :id => rev.id}
            - branch.builds.each do |build|
              .result
                - res = rev.build_results.find_by_build_id(build.id)
                - if res
                  = res.result
                - else
                  UNKOWN
                = build.name

